<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBF4EA"
    tools:context=".Phone_no_entery">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#EDF6DF"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <Button
        android:id="@+id/select_user_type"
        android:layout_width="144dp"
        android:layout_height="52dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="1132dp"
        android:layout_marginBottom="60dp"
        android:background="@color/design_default_color_secondary"
        android:text="Continue "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toobar" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="295dp"
        android:layout_height="120dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="64dp"
        android:text="We provide services for both students and tutors. Plase chose your position to get the service you want."
        android:textAlignment="center"
        android:textColor="@color/headerText"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Spinner
        android:id="@+id/static_spinner"
        android:layout_width="260dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="60dp"
        android:background="@android:drawable/editbox_background_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>