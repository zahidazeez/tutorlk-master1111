<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF6DF"
    tools:context=".Phone_no_entery">

    <Button
        android:id="@+id/select_user_type"
        android:layout_width="144dp"
        android:layout_height="52dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="1132dp"
        android:layout_marginBottom="60dp"
        android:background="@color/design_default_color_secondary"
        android:text="Enter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toobar" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="295dp"
        android:layout_height="120dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="56dp"
        android:text="Please enter your phone number. A verification code will be sensed to this number."
        android:textAlignment="center"
        android:textColor="@color/headerText"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="356dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="phone number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


</androidx.constraintlayout.widget.ConstraintLayout>