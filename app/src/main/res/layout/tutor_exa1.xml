<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    >

    <RelativeLayout
        android:layout_width="401dp"
        android:layout_height="72dp"
        android:layout_margin="4dp">

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/std_image"
            android:layout_width="60dp"
            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/studentpic"
            app:siBorderColor="@color/MainBackground"
            app:siBorderWidth="6dp" />



        <!--<ImageView-->
            <!--android:id="@+id/std_image"-->
            <!--android:layout_width="58dp"-->
            <!--android:layout_height="68dp"-->
            <!--android:layout_alignParentStart="true"-->


            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_marginStart="4dp"-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:padding="8dp" />-->

        <TextView
            android:id="@+id/std_edu_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="74dp"
            android:layout_marginTop="7dp"
            android:text="Tuter Name"
            android:textColor="@color/headerText"

            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ed_expt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="44dp"
            android:layout_toEndOf="@+id/std_image"
            android:text="Course"


            android:textColor="@color/suppourtText"
            android:textSize="14sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>